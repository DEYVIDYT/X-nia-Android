<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurações de Upload"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurações do Internet Archive"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para obter suas credenciais, acesse archive.org, faça login e vá em 'Account Settings' > 'S3 API Keys'"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp" />

        <!-- Removed upload game section -->
        <!-- The Button R.id.btn_configure_upload_api was removed as UploadApiSettingsHostActivity is deleted -->

    </LinearLayout>

</ScrollView>

