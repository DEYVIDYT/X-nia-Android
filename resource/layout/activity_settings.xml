<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurações de Upload"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Removed Internet Archive specific settings text -->
        <!-- The Button R.id.btn_configure_upload_api was removed as UploadApiSettingsHostActivity is deleted -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="URLs do Servidor"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="16dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="URL para adicionar/atualizar jogos:"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://ldgames.x10.mx/add_update_game.php"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorPrimary"
            android:textIsSelectable="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="URL para listar jogos da comunidade:"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://ldgames.x10.mx/list_games.php"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorPrimary"
            android:textIsSelectable="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="URL para obter versões do Winlator:"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://raw.githubusercontent.com/DEYVIDYT/WINLATOR-DOWNLOAD/refs/heads/main/WINLATOR.json"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorPrimary"
            android:textIsSelectable="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"/>

        <Button
            android:id="@+id/btn_link_cryptor_tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:text="Ferramenta Link Cryptor"/>
            <!-- Shorter text -->

    </LinearLayout>

</ScrollView>

