<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="Serviço de Upload">

        <ListPreference
            android:key="upload_service"
            android:title="Serviço de Upload Preferido"
            android:summary="%s"
            android:defaultValue="internet_archive"
            android:entries="@array/upload_service_entries"
            android:entryValues="@array/upload_service_values" />
            <!-- app:useSimpleSummaryProvider="true" REMOVED -->

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Credenciais do Internet Archive">
        <!-- app:iconSpaceReserved="false" REMOVED from PreferenceCategory -->

        <EditTextPreference
            android:key="access_key"
            android:title="Access Key"
            android:summary="Enter your Internet Archive S3 Access Key" />
            <!-- app:useSimpleSummaryProvider="true" REMOVED -->
            <!-- app:iconSpaceReserved="false" REMOVED -->

        <EditTextPreference
            android:key="secret_key"
            android:title="Secret Key"
            android:summary="Enter your Internet Archive S3 Secret Key"
            android:inputType="textPassword" />
            <!-- app:useSimpleSummaryProvider="true" REMOVED -->
            <!-- app:iconSpaceReserved="false" REMOVED -->

        <EditTextPreference
            android:key="item_identifier"
            android:title="Item Identifier"
            android:summary="Default Internet Archive item identifier (e.g., winlator-games)" />
            <!-- app:useSimpleSummaryProvider="true" REMOVED -->
            <!-- app:iconSpaceReserved="false" REMOVED -->

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Credenciais do Datanodes.to">

        <EditTextPreference
            android:key="datanodes_api_key"
            android:title="Datanodes.to API Key"
            android:summary="Insira sua API Key do Datanodes.to"
            android:inputType="textPassword" />
            <!-- app:useSimpleSummaryProvider="true" REMOVED -->

    </PreferenceCategory>

</PreferenceScreen>
